using System;
using System.Globalization;

namespace AreaCircunferencia_MembrosEstaticos
{
    class Program
    {
        static double Pi = 3.14;
        static void Main(string[] args)
        {
            Console.WriteLine("Entre com o valor do raio");
            double raio = double.Parse(Console.ReadLine(),CultureInfo.InvariantCulture);

            double circ = Circunferencia(raio);
            Console.WriteLine("CircunferÃªncia: " + circ.ToString("F2",CultureInfo.InvariantCulture));

            Console.WriteLine("Volume: " + Volume(raio).ToString("F2",CultureInfo.InvariantCulture));
            Console.WriteLine(Pi.ToString("F2", CultureInfo.InvariantCulture));
        }

        static double Circunferencia(double r)
        {
            return(2*Pi*r);
        }

        static double Volume(double r)
        {
            return (4.0 / 3.0 * Pi * (Math.Pow(r,3)));
        }
    }

    
}
