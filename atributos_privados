using System;
using System.Globalization;

namespace ConsoleApp4
{
    class Program
    {
        static void Main(string[] args)
        {

            Produto x = new Produto ("TV", 100.00, 10);

            x.SetNome(Console.ReadLine());
            Console.WriteLine(x.GetNome());

            x.AdicionarProduto((int.Parse(Console.ReadLine(),CultureInfo.InvariantCulture)));
            Console.WriteLine(x.GetQuantidade().ToString());

            x.RemoverProduto((int.Parse(Console.ReadLine(), CultureInfo.InvariantCulture)));
            Console.WriteLine(x.GetQuantidade().ToString());
        }
    }
}


using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp4
{
    class Produto
    {
        private string _nome;
        private double _preco;
        private int _quantidade;


        public Produto(string nome, double preco, int quantidade)
        {
            _nome = nome;
            _preco = preco;
            _quantidade = quantidade;
        }

        public string GetNome()
        {
            return _nome;
        }
        public int GetQuantidade()
        {
            return _quantidade;
        }
        public double GetPreco()
        {
            return _preco;
        }

        public void SetNome(string nome)
        {
            if (nome != null && nome.Length>1)
            {
                _nome = nome;
            }
            
        }

        public void AdicionarProduto(int q)
        {
            _quantidade = _quantidade + q;
        }

        public void RemoverProduto(int q)
        {
            _quantidade = _quantidade - q;
        }
    }
}
