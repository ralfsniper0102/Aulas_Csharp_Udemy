using System;
using System.Globalization;

namespace ConsoleApp2
{
    class Program
    {
        static void Main(string[] args)
        {
            Aluno x;
            x = new Aluno();

            Console.Write("Nome do aluno: ");
            x.Nome = Console.ReadLine();
            Console.WriteLine("Digite as trÃªs notas do aluno: ");
            x.Nota1 = double.Parse(Console.ReadLine(), CultureInfo.InvariantCulture);
            x.Nota2 = double.Parse(Console.ReadLine(), CultureInfo.InvariantCulture);
            x.Nota3 = double.Parse(Console.ReadLine(), CultureInfo.InvariantCulture);
            x.SomaNotas();
            Console.WriteLine("NOTA FINAL = " + x.NotaFinal.ToString("F2", CultureInfo.InvariantCulture));
            
            Console.WriteLine(x.Aprovado);
            Console.WriteLine(x.Texto);


        }
    }
}


using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Globalization;

namespace ConsoleApp2
{
    class Aluno
    {
        public string Nome;
        public double Nota1;
        public double Nota2;
        public double Nota3;
        public double NotaFinal;
        public string Aprovado;
        public double PontosFaltantes;
        public string Texto;

        public void SomaNotas()
        {
            NotaFinal = Nota1 + Nota2 + Nota3;
            Aprovacao();
            FaltaNota();
        }

        public void Aprovacao()
        {
            if (NotaFinal >= 60)
            {
                Aprovado = "APROVADO";
            }
            else
            {
                Aprovado = "REPROVADO";
            }
        }

        public void FaltaNota()
        {
            if (Aprovado == "REPROVADO")
            {
                PontosFaltantes = (60 - NotaFinal);
                Texto = "FALTARAM " + PontosFaltantes.ToString("F2",CultureInfo.InvariantCulture) + " PONTOS";
            }


        }
      



    }
}
